---
type TechBadgeProps = {
  name: string;
  imgSrc: string;
  altSrc: string;
};

const { name, imgSrc, altSrc } = Astro.props as TechBadgeProps;
---

<div class="flex items-center gap-4 hover:scale-105 ease-in-out duration-200">
  <div
    class="rounded-full bg-neutral-600 w-[60px] h-[60px] flex justify-center items-center"
  >
    <img src={imgSrc} alt={altSrc} height="30" width="30" />
  </div>
  <h3 class="text-[14px] md:text-[16px]">{name}</h3>
</div>
